<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stats.vicky.cabtesting.Profile"
    android:id="@+id/profileDrawerLayout"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <include android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/appbar"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/colorGreen"
                app:civ_border_overlay="true"
                app:civ_border_width="1pt"
                app:civ_fill_color="@color/colorRed" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="Vignesh Kumar T.V.P"
                android:textSize="14sp" />




            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="#d4d1cc"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:text="Senior Software Engineer"
                android:padding="20dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:padding="20dp"
                android:text="vigneshp@systechusa.com"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:padding="20dp"
                android:text="Contact" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:elevation="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="#ead6b4"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/navigation"
        android:layout_gravity="start"
        />
</android.support.v4.widget.DrawerLayout>